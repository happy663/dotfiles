# =============================================================================
# Shell Aliases
# =============================================================================

# -----------------------------------------------------------------------------
# Navigation and Directory Aliases
# -----------------------------------------------------------------------------
alias g='cd $(ghq root)/$(ghq list | peco)'
alias '..'='cd ..'
alias '...'='cd ../..'
alias '....'='cd ../../..'

# -----------------------------------------------------------------------------
# Command Replacements
# -----------------------------------------------------------------------------
alias cat='bat'
alias find='fd'
alias bat='bat'
alias rg='rg'
alias fzf='fzf'

# -----------------------------------------------------------------------------
# GitHub CLI Aliases
# -----------------------------------------------------------------------------
alias ghb='gh browse'
alias ghpc='gh pr checks'
alias ghprc='gh pr create'
alias gc='ghq get'

# -----------------------------------------------------------------------------
# Development Aliases
# -----------------------------------------------------------------------------
alias po='poetry'
alias py='python3'

# -----------------------------------------------------------------------------
# Docker Aliases
# -----------------------------------------------------------------------------
alias de='docker exec -it $(docker ps | peco | cut -d " " -f 1) /bin/bash'

# -----------------------------------------------------------------------------
# System Aliases
# -----------------------------------------------------------------------------
alias relogin='exec $SHELL -l'
alias alert='terminal-notifier -message'

# -----------------------------------------------------------------------------
# Neovim Alias
# -----------------------------------------------------------------------------
# nコマンドをnvim-restart関数にエイリアス
alias n='nvim-restart'
